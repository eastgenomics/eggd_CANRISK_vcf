{
    "name": "eggd_CANRISK_vcf",
    "title": "eggd_CANRISK_vcf",
    "summary": "App to convert VCF output from sentieon Haplotyper for PRS variants to a format compatible with the CANRISK tool",
    "version": "1.0.0",
    "whatsNew": "* v1.0.0 Initial release of the app;",
    "dxapi": "1.0.0",
    "authorizedUsers": [
        "org-emee_1"
      ],
      "developers":[
        "org-emee_1"
      ],
    "inputSpec": [
      {
        "name": "sample_vcf",
        "help": "VCF output of Sentieon-dnaseq (FASTQ>VCF). Must contain genotypes for all positions specified in the PRS file.",
        "class": "file",
        "optional": false,
        "patterns": [
          "*.vcf.gz, *.vcf"
        ]
      },
      {
        "name": "reference_fasta",
        "help": "Reference genome file, without chr in the chromosome number",
        "class": "file",
        "optional": false,
        "patterns": [
          "*.fa.gz,"
        ],
        "suggestions": [
          {
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "path": "/genomes/"
          },
          {
            "project": "project-F3zxk7Q4F30Xp8fG69K1Vppj",
            "path": "/H. Sapiens - GRCh37 - hs37d5 (1000 Genomes Phase II)"
          }
        ]
      },
      {
        "name": "reference_fasta_index",
        "help": "Reference genome fasta index file",
        "class": "file",
        "optional": false,
        "patterns": ["*.fa.fai"],
        "suggestions": [
          {
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "path": "/genomes/"
          },
          {
            "project": "project-F3zxk7Q4F30Xp8fG69K1Vppj",
            "path": "/H. Sapiens - GRCh37 - hs37d5 (1000 Genomes Phase II)"
          }
        ]
      },
      {
        "name": "segments_vcf",
        "help": "VCF output of GATK gCNV (segments)",
        "class": "file",
        "optional": true,
        "patterns": [
          "*segments.vcf"
        ]
      },
      {
        "name": "PRS_variants",
        "help": "BED file of PRS targets from Canrisk site. Must contain at least CHROM, POS, REF & ALT fields.",
        "class": "file",
        "optional": false,
        "patterns": [
          "*.bed"
        ]
      }
    ],
    "outputSpec": [
      {
        "name": "canrisk_PRS",
        "class": "file",
        "patterns": [
          "*canrisk_PRS.vcf"
        ]
      },
      {
        "name": "cnv_check",
        "class": "file",
        "patterns": [
          "*cnv_check.txt"
        ]
      },
      {
        "name": "coverage_check",
        "class": "file",
        "patterns": [
          "*coverage_check.txt"
        ]
      }
    ],
    "runSpec": {
      "timeoutPolicy": {
        "*": {
          "hours": 2
        }
      },
      "interpreter": "bash",
      "file": "src/eggd_CANRISK_vcf.sh",
      "distribution": "Ubuntu",
      "release": "20.04",
      "version": "0", 
      "assetDepends": [
        {
          "name": "bedtools",
          "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
          "folder": "/app_assets/bedtools/bedtools_v2.30.0",
          "version": "2.30.0"
        },
        {
          "name": "htslib",
          "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
          "folder": "/app_assets/htslib/htslib_v1.15.0",
          "version": "1.15.0"
        }
      ]
    },
    "access": {
      "project": "CONTRIBUTE"
    },
    "regionalOptions": {
      "aws:eu-central-1": {
        "systemRequirements": {
          "*": {
            "instanceType": "mem1_ssd1_v2_x2"
          }
        }
      }
    }
  }
